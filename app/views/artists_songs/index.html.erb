<div class="row">
  <div class="col-md-4"></div>
  <div class="col-md-4">
    <div class="text-center pb-4">
      <div class="titlle pb-2">Find All Artists Songs</div>
      <%= form_with url: artists_songs_path, method: :get do |f| %>
        <%= f.label :artist_name, "Lookup Songs:" %>
        <%= f.text_field :artist_name %>
        <%= f.submit "Search" %>
      <% end %>
    </div>

    <% if @song_poros %>
      <% @song_poros.each do |song_poro| %>
        <div class="row pb-1">
          <div class="col-4">
            <img src="<%= song_poro.image_url %>" alt="" width="100">
          </div>
          <div class="col-8">
            <div><%= song_poro.title %></div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="col-md-4"></div>
</div>